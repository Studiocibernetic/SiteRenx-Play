// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              String         @id @default(cuid())
  nome            String?
  handle          String?
  imagem          String?
  ehAdmin         Boolean        @default(false)
  bio             String?
  dataCriacao     DateTime       @default(now())
  dataAtualizacao DateTime       @updatedAt
  // Relações
  comentarios     Comentario[]
  favoritos       Favorito[]
  mensagensChat   MensagemChat[]
}

model Jogo {
  id                 String       @id @default(cuid())
  titulo             String
  descricao          String
  urlImagem          String
  desenvolvedor      String       @default("Unknown")
  versao             String       @default("v1.0")
  engine             String       @default("REN'PY")
  idioma             String       @default("English")
  avaliacao          Float        @default(4)
  tags               String       @default("Adult,Visual Novel")
  urlDownload        String?
  urlDownloadWindows String?
  urlDownloadAndroid String?
  urlDownloadLinux   String?
  urlDownloadMac     String?
  censurado          Boolean      @default(false)
  instalacao         String       @default("Extrair e executar")
  changelog          String       @default("Lançamento inicial")
  notasDev           String?
  dataLancamento     DateTime     @default(now())
  dataCriacao        DateTime     @default(now())
  dataAtualizacao    DateTime     @updatedAt
  // Suporte a Sistemas Operacionais
  osWindows          Boolean      @default(true)
  osAndroid          Boolean      @default(false)
  osLinux            Boolean      @default(false)
  osMac              Boolean      @default(false)
  // Relações
  imagens            ImagemJogo[]
  comentarios        Comentario[]
  favoritos          Favorito[]
}

model ImagemJogo {
  id        String @id @default(cuid())
  idJogo    String
  urlImagem String
  jogo      Jogo   @relation(fields: [idJogo], references: [id], onDelete: Cascade)
}

model Comentario {
  id              String   @id @default(cuid())
  conteudo        String
  curtidas        Int      @default(0)
  idJogo          String
  idUsuario       String
  dataCriacao     DateTime @default(now())
  dataAtualizacao DateTime @updatedAt
  jogo            Jogo     @relation(fields: [idJogo], references: [id], onDelete: Cascade)
  usuario         Usuario  @relation(fields: [idUsuario], references: [id], onDelete: Cascade)
}

model Favorito {
  id        String  @id @default(cuid())
  idJogo    String
  idUsuario String
  jogo      Jogo    @relation(fields: [idJogo], references: [id], onDelete: Cascade)
  usuario   Usuario @relation(fields: [idUsuario], references: [id], onDelete: Cascade)

  @@unique([idJogo, idUsuario])
}

model MensagemChat {
  id            String   @id @default(cuid())
  conteudo      String
  urlImagem     String?
  ehConvidado   Boolean  @default(false)
  nomeConvidado String?
  idUsuario     String?
  dataCriacao   DateTime @default(now())
  usuario       Usuario? @relation(fields: [idUsuario], references: [id], onDelete: SetNull)
}
